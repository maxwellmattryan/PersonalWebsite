{
    "name": "api",
    "version": "2.0.0",
    "description": "API for mattmaxwell.tech",
    "author": "Matthew Maxwell",
    "license": "MIT",
    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "docker": "npm run docker:postgres && npm run docker:redis",
        "docker:postgres": "docker start postgres || docker run --name postgres -p 5432:5432 -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=password -e POSTGRES_DB=mattmaxwell -d postgres:alpine",
        "docker:redis": "docker start redis || docker run --name redis -p 6379:6379 -d redis:alpine",
        "start": "node dist/main",
        "start:dev": "npm run docker && nest start --watch",
        "start:debug": "npm run docker && nest start --debug --watch",
        "eslint": "eslint",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@google-cloud/storage": "^5.8.0",
        "@hapi/joi": "^17.1.1",
        "@mapbox/node-pre-gyp": "^1.0.0",
        "@nestjs-modules/mailer": "^1.5.1",
        "@nestjs/bull": "^0.3.1",
        "@nestjs/common": "^7.6.12",
        "@nestjs/config": "^0.6.3",
        "@nestjs/core": "^7.6.12",
        "@nestjs/jwt": "^7.2.0",
        "@nestjs/passport": "^7.1.5",
        "@nestjs/platform-express": "^7.6.12",
        "@nestjs/throttler": "^1.1.1",
        "@nestjs/typeorm": "^7.1.5",
        "@sideway/address": "^4.1.1",
        "@sideway/formula": "^3.0.0",
        "@sideway/pinpoint": "^2.0.0",
        "@stripe/stripe-js": "^1.12.1",
        "@types/bcrypt": "^3.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/hapi__joi": "^17.1.6",
        "@types/passport-jwt": "^3.0.4",
        "@types/passport-local": "^1.0.33",
        "@types/stripe-checkout": "^1.0.3",
        "bcrypt": "^5.0.0",
        "bull": "^3.20.1",
        "cache-manager": "^3.4.0",
        "class-transformer": "0.4.0",
        "class-validator": "^0.13.1",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "core-js": "^3.9.0",
        "fast-crc32c": "^2.0.0",
        "glob": "^7.1.6",
        "handlebars": "^4.7.7",
        "helmet": "^4.4.1",
        "joi": "^17.4.0",
        "morgan": "^1.10.0",
        "nodemailer": "^6.4.18",
        "npm": "^7.5.6",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "stripe": "^8.137.0",
        "typeorm": "^0.2.31",
        "typeorm-naming-strategies": "^2.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.5.4",
        "@nestjs/schematics": "^7.2.7",
        "@nestjs/testing": "^7.6.12",
        "@types/bull": "^3.15.0",
        "@types/cache-manager": "^3.4.0",
        "@types/express": "^4.17.11",
        "@types/jest": "26.0.20",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.14.28",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "4.15.1",
        "@typescript-eslint/parser": "4.15.1",
        "eslint": "7.20.0",
        "jest": "26.6.3",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "26.5.1",
        "ts-loader": "^8.0.17",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
